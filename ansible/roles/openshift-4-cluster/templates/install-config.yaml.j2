apiVersion: v1
baseDomain: {{ public_domain }}
compute:
- name: worker
  platform: {}
  replicas: 0
controlPlane:
  name: master
  platform: {}
  replicas: {{ master_count }}
metadata:
  name: {{ cluster_name }}
networking:
  clusterNetwork:
{% if 'IPv4' in ip_families  %}
  - cidr: {{ networking_clusternetwork_cidr_ipv4 }}
    hostPrefix: {{ networking_clusternetwork_hostprefix_ipv4 }}
{% endif %}
{% if 'IPv6' in ip_families  %}
  - cidr: {{ networking_clusternetwork_cidr_ipv6 }}
    hostPrefix: {{ networking_clusternetwork_hostprefix_ipv6 }}
{% endif %}
  machineNetwork:
{% if 'IPv4' in ip_families  %}
  - cidr: {{ networking_machinenetwork_cidr_ipv4 }}
{% endif %}
{% if 'IPv6' in ip_families  %}
  - cidr: {{ networking_machinenetwork_cidr_ipv6 }}
{% endif %}
  serviceNetwork:
{% if 'IPv4' in ip_families  %}
  - "{{ networking_servicenetwork_cidr_ipv4 }}"
{% endif %}
{% if 'IPv6' in ip_families  %}
  - "{{ networking_servicenetwork_cidr_ipv6 }}"
{% endif %}
  type: {{ sdn_plugin_name }}
platform:
  none: {}
pullSecret:
  '{{ image_pull_secret }}'
sshKey: |
  {{ ssh_public_key }}
{% if install_config_additionalTrustBundle is defined %}
additionalTrustBundle: |
  {{ install_config_additionalTrustBundle |indent(width=2) }}
{% endif %}
{%- if install_config_imageContentSources is defined %}
imageContentSources:
  {{ install_config_imageContentSources  | to_nice_yaml(indent=2) | indent(width=2) }}
{% endif %}
{%- if install_config_proxy is defined %}
proxy:
  {{ install_config_proxy  | to_nice_yaml(indent=2) | indent(width=2) }}
{% endif %}
