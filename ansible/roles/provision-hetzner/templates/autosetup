DRIVE1 /dev/{{ hetzner_disk1 }}
DRIVE2 /dev/{{ hetzner_disk2 }}
SWRAID {{ hetzner_swraid }}
SWRAIDLEVEL {{ hetzner_swraid_level }}
BOOTLOADER grub
HOSTNAME {{ hetzner_hostname }}
PART /boot ext3 512M
PART lvm vg0 all

LV vg0 root / ext4 50G
LV vg0 swap swap swap 8G
LV vg0 home   /home   ext4      40G
LV vg0 var    /var ext4 50G
LV vg0 libvirt /var/lib/libvirt/images xfs all

IMAGE {{ hetzner_image }}
